						compare_ppart_collact		///
						compare_ppart_vote			///
						compare_assradio			///
						compare_listradio			///
						compare_asstv				///
						compare_asscellint			///
						compare_edu					///
						compare_water				///
						compare_electricity			
						;
						
#d cr
	
	
	
foreach samplecompare of local samples {
	
	use `dta_`samplecompare'', clear
	
	/* Set Put Excel File Name */
	putexcel clear
	putexcel set "${court_tables}/pfm_ne_afrobarometer.xlsx", sheet(`samplecompare', replace) modify

	putexcel A1 = ("variable")
	putexcel B1 = ("samplemean")
	putexcel C1 = ("samplesd")
	putexcel D1 = ("min")
	putexcel E1 = ("max")
	putexcel F1 = ("N")

	/* Set locals */
	local i = 1
	local row = 2

	/* Run and save for each variable */
	foreach dv of local base_vars  {

		/* Variable Name */
		qui ds `dv'
			global varname = "`r(varlist)'"  
						
		/* Mean */
		qui sum `dv'
			global sample_mean `r(mean)'
			global sample_sd `r(sd)'

		/* Variable Range */	
		qui sum `dv' 
			global min = r(min)
			global max = r(max)
			
		/* Count */
		qui tab `dv' 
			global N = `r(N)'

		/* Put excel */
		putexcel A`row' = ("${varname}")
		putexcel B`row' = ("${sample_mean}")
		putexcel C`row' = ("${sample_sd}")
		putexcel D`row' = ("${min}")
		putexcel E`row' = ("${max}")
		putexcel F`row' = ("${N}")
			
	/* Update locals */
	local row = `row' + 1
	local i = `i' + 1 
	
	} // closes vars within sample	

	
} // closes samples 



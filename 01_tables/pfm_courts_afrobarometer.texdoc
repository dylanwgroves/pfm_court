#d ;
	
	local samples 		court        ///
						africa    /// 
						tz	      
						;

	local base_vars 	compare_ge_land            ///
						compare_ge_work   		    ///
						compare_ge_ipv			    ///
						compare_ge_leadership	    ///
						compare_nationalism		  	///
						compare_prej_homo			///
